<%- include('./partials/head.ejs') %>

    <body>

        <%- include("./partials/header.ejs") %>

            <main id="scoreMain">

                <% if (scores.length > 0) { %>
                    <table class="scoreTable">
                        <tr class="scoreHead">
                            <th>Name</th>
                            <th>Score</th>
                        </tr>
                        <% scores.forEach(element=> { %>
                            <%- include("./partials/score.ejs", {element:element}) %>
                                <% }) %>
                    </table>
                    <% } else { %>
                        <h2>NO HAY SCORES</h2>
                        <% } %>
            
            </main>
                <section id="back">
                    <a class="back" href="/pacman"><i class="fa-solid fa-arrow-left"></i></a>
                </section>  
    </body>

    </html>